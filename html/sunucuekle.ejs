<%- include('ek/header', {bot, user, path}) %>
<script type="text/javascript">
var title = "WorldBotList - Sunucu Ekle";
document.title = title;
</script>
<div class="container is-fullhd">
 <form method="post">
				
   <div class="jumbotron">
     <h2 style="color: #333;text-align:center;">Sunucu Ekleme</h2>
     <br>
		<label><i aria-hidden="true"></i>Guild ID <a style="color:red">*</a></label>
      <input type="text" name="sunucuid" id="sunucuid" placeholder="Örneğin; <%=bot.user.id%>" required="required">
   <br>
    <label><i aria-hidden="true"></i>Sunucu Sahibi ID <a style="color:red">*</a></label>
     <input type="text" name="sunucusahip" id="sunucusahip"value="<%=user.id%>" disabled>
     
     <label><i aria-hidden="true"></i>Sunucu Açıklaması <a style="color:red">*</a></label>
     <p>(HTML Kodlar desteklemektedir)</p>
     <textarea name="sunucu-aciklama" id="sunucu-aciklama"placeholder="Sunucunun açıklamasını yazınız." minlength="20" required="required"></textarea>
	   
   <h6 style="color:red">
     Yanında * olanlar zorunlu, olmayanlar ise isteğe bağlıdır.
   </h6>

				<div style="width: 100%; text-align: center; margin-top: 20px;">
					<button type="submit" class="butonss"><i class="fa fa-save fa-fw"></i> Sunucuyu Ekle<i aria-hidden='true'></i></button>
				</div>
   </div>
			</form>
		</div>
	</div>
</div>
</div>

<% include ./ek/footer %>